{
  "name": "ulka",
  "description": "A simpler static site generator written in javascript",
  "version": "1.0.0-experimental.1",
  "bin": {
    "ulka": "bin/ulka.js"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:js build:types",
    "build:js": "rollup -c",
    "build:types": "run-s types:build types:rollup",
    "types:build": "tsc --declaration --emitDeclarationOnly --outDir temp",
    "types:rollup": "api-extractor run && rimraf temp",
    "clean": "rimraf dist temp",
    "cb": "run-s clean build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path .",
    "release": "../../scripts/release"
  },
  "files": [
    "dist",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulkajs/ulka.git"
  },
  "author": {
    "name": "Roshan Acharya",
    "email": "acharyaroshan237@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/ulkajs/ulka/issues"
  },
  "homepage": "https://github.com/ulkajs/ulka/tree/main/packages/ulka#readme",
  "optionalDependencies": {
    "fsevents": "~2.3.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.15.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/connect": "^3.4.34",
    "@types/cors": "^2.8.10",
    "@types/ejs": "^3.0.6",
    "@types/get-value": "^3.0.1",
    "@types/markdown-it": "^12.0.1",
    "@types/mime-types": "^2.1.0",
    "@types/normalize-path": "^3.0.0",
    "@types/recursive-readdir": "^2.2.0",
    "@types/rimraf": "^3.0.0",
    "@types/ws": "^7.4.4",
    "@ulkajs/template-engine": "1.0.0-experimental.1",
    "ansi-colors": "^4.1.1",
    "chokidar": "^3.5.2",
    "commander": "^7.2.0",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.6",
    "fast-glob": "^3.2.5",
    "get-port": "^5.1.1",
    "get-value": "^3.0.1",
    "gray-matter": "^4.0.3",
    "liquidjs": "9.25.0",
    "magic-string": "^0.25.7",
    "markdown-it": "^12.0.6",
    "mime-types": "^2.1.30",
    "normalize-path": "^3.0.0",
    "p-map": "4.0.0",
    "recursive-readdir": "^2.2.2",
    "rollup": "^2.48.0",
    "rollup-plugin-license": "^2.3.0",
    "slugify": "^1.6.3",
    "tslib": "^2.2.0",
    "ws": "^7.4.5"
  },
  "keywords": [
    "generator",
    "website",
    "static site",
    "jekyll",
    "blog",
    "ssg",
    "gatsby",
    "11ty",
    "html",
    "markdown",
    "templates",
    "static-site"
  ],
  "dependencies": {}
}
